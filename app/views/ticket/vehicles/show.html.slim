.page-header
  h2
    | Timesheet for 
    = @vehicle.display_name

.table-responsive
  table.table.table-striped.table-bordered
    thead
      tr
        th Status
        th Time
        th Duration
    tbody
      - @entries.each do |entry|
        tr
          td = entry.status_pretty
          td
            - if entry.time_entered_manually?
              span.time_entered_manually data-toggle="tooltip" title="Originally #{entry.created_at}"
                | âœ± 
            = entry.time
            |  
            = link_to 'edit', ticket_vehicle_edit_status_path(vehicle_entry_id: entry.id)
          td = entry.duration

= partial 'deleted_entries', entries: @entries_deleted