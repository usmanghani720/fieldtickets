- employees.each do |employee|
  .btn-group
  
    button.employee-button type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
      = employee
      |  
      span.caret
    
    ul.dropdown-menu
      
      li.disabled
        a
          = employee.status.humanize
          |  since 
          = hide_today_in_date(employee.time)
      
      li = link_to 'View timesheetâ€¦', ticket_employee_log_path(ticket, employee)
      
      li.divider role="separator"
      
      li.disabled
        a Change status:
      
      - if not employee.status == 'on_the_job'
        li = link_to 'On the Job', ticket_employee_new_status_path(ticket, employee, status: 'on_the_job'), method: :post
      
      - if not employee.status == 'transport'
        li = link_to 'Transport', ticket_employee_new_status_path(ticket, employee, status: 'transport'), method: :post
      
      - if not employee.status == 'maintenance'
        li = link_to 'Maintenance', ticket_employee_new_status_path(ticket, employee, status: 'maintenance'), method: :post
        
      - if not employee.status == 'idle'
        li = link_to 'Idle', ticket_employee_new_status_path(ticket, employee, status: 'idle'), method: :post
            
