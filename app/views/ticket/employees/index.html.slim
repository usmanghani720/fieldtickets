  $('.change_status').click (event) ->
    $('#employee_id').val($(event.target).data('id'))
    $('#employee_status').val($(event.target).data('status'))
    date = new Date
    $('#time_input').val(date.toTimeString().substring(0,5))
    time_zone_abbr = date.toString().match(/\(([A-Za-z\s].*)\)/)[1]
    time_zone_string = switch time_zone_abbr
      when 'CDT', 'CST' then 'central'
      when 'EDT', 'EST' then 'eastern'
    
    time_zone_input = $('input[value=' + time_zone_string + ']')[0]
    time_zone_input.checked = true
    time_zone_input.parentElement.className += ' active'
    
    $('#changeEmployeeStatus').modal('show')
    
  $('#changeEmployeeStatus').on 'shown.bs.modal', ->
    $('#time_input').focus()
    
